{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "lib": ["esnext", "dom"],
    "typeRoots": [
      "node_modules/@types"
    ],
    "sourceMap": true,
    "allowJs": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "noUnusedLocals": true,
    "removeComments": false,
  },
  "include": [
    "src/**/*",
  ],
}
